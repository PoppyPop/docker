include "/etc/bind/ddns_update.key";
include "/etc/bind/rndc.key";

acl internals {
	192.168.0.0/24;
	127.0.0.1;
	};
acl dnsservers {
	192.168.0.238;
	192.168.0.237;
	192.168.0.236;
	192.168.0.235;
	};

controls {
	inet 127.0.0.1 port 953 allow { 127.0.0.1; } keys { rndc-key; };
	};
	
trusted-keys {
	dlv.isc.org. 257 3 5 "";
	};

zone "moot" {
	type master;
    // masters { 192.168.0.236; };
        
	file "/etc/bind/db.moot";
	allow-transfer {
		internals;
		};
	allow-update {
		key DDNS_UPDATE;
		};
	allow-query {
		internals;
		};
	/*allow-update-forwarding {
		dnsservers;
		};
	allow-notify { 
	    dnsservers; 
	    };*/
	notify yes;
	};
	
zone "0.168.192.in-addr.arpa" {
	type master;
    //masters { 192.168.0.236; };
    
	file "/etc/bind/rev.192.168.0";
	allow-transfer {
		internals;
		};
	allow-update {
		key DDNS_UPDATE;
		};
	allow-query {
		internals;
		};
	/*allow-update-forwarding {
		dnsservers;
		};
	allow-notify { 
	    dnsservers; 
	    };*/
	notify yes;
	};

