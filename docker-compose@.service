[Unit]
Description=%i Stack
After=docker.service  
Requires=docker.service

[Service]
WorkingDirectory=/srv/confs/%i/
ExecStartPre=/usr/bin/docker-compose -f docker-compose.yml stop  
ExecStart=/usr/bin/docker-compose -f docker-compose.yml up 
ExecStop=/usr/bin/docker-compose -f docker-compose.yml stop   
ExecReload=/usr/bin/docker-compose -f docker-compose.yml up --force-recreate

[Install]
WantedBy=multi-user.target  
